@model SV20T1020275.DomainModels.Employee
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="box box-primary">
    <div class="box-body">
        <div class="form-group">
            <label>Tên người dùng:</label>
            <p class="form-control-static">@Model.FullName</p>
        </div>

        <div class="form-group">
            <label>Địa chỉ:</label>
            <p class="form-control-static">@Model.Address</p>
        </div>

        <div class="form-group">
            <label>Emai:</label>
            <p class="form-control-static">@Model.Email</p>
        </div>

        <div class="form-group">
            <label>Điện thoại:</label>
            <p class="form-control-static">@Model.Phone</p>
        </div>

        <div class="form-group">
            <label>Ngày sinh:</label>
            <p class="form-control-static">@Model.BirthDate</p>
        </div>

        <div class="form-group">
            <div class="#">
                <label>Ảnh đại diện: <p> <p/></label>
                <input type="hidden" name="Photo" value="photo.jpg" />
                <img id="Photo" src="~/images/employees/@Model.Photo" class="img img-bordered" style="width:200px" />
            </div>
        </div>

        <div class="form-group text-right">
            <a href="~/Home" class="btn btn-defaut">
                Quay lại
            </a>
        </div>
    </div>
</div>