@model SV20T1020275.Web.Models.Person
@{
    
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">
            <div class="form-group">
                <label> Họ và tên:</label>
                <input type="text" class="form-control" name="Name" autofocus value="@Model.name"
            </div>

            <div class="form-group">
                <label> Ngày sinh:</label>
                <input type="hidden" name="BirthDate" value="@Model.BirthDay"/>
                <input type="text" class="form-control" 
                                name="BirthDateInput" 
                                value="@Model.BirthDay.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))">
            </div>

            <div class="form-group">
                <label> Salary:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Test" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>